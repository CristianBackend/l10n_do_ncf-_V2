k<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <!-- Grupo: Usuario NCF -->
        <record id="group_ncf_user" model="res.groups">
            <field name="name">NCF - Usuario</field>
            <field name="comment">Puede ver y usar comprobantes fiscales</field>
        </record>

        <!-- Grupo: Administrador NCF (hereda de Usuario) -->
        <record id="group_ncf_manager" model="res.groups">
            <field name="name">NCF - Administrador</field>
            <field name="comment">Puede configurar comprobantes fiscales</field>
            <field name="implied_ids" eval="[(4, ref('group_ncf_user'))]"/>
            <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
        </record>
    </data>
</odoo>
