<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <!-- Categoria NCF -->
        <record id="module_category_ncf" model="ir.module.category">
            <field name="name">NCF - Comprobantes Fiscales</field>
            <field name="description">Gestión de Comprobantes Fiscales para República Dominicana</field>
            <field name="sequence">50</field>
        </record>

        <!-- Grupo: Usuario NCF -->
        <record id="group_ncf_user" model="res.groups">
            <field name="name">Usuario</field>
            <field name="category_id" ref="module_category_ncf"/>
        </record>

        <!-- Grupo: Administrador NCF (hereda de Usuario) -->
        <record id="group_ncf_manager" model="res.groups">
            <field name="name">Administrador</field>
            <field name="category_id" ref="module_category_ncf"/>
            <field name="implied_ids" eval="[(4, ref('group_ncf_user'))]"/>
            <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
        </record>
    </data>
</odoo>
