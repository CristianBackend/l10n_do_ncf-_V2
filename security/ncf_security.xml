<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        
        <!-- Grupo: Usuario NCF - Hereda de Facturación -->
        <record id="group_ncf_user" model="res.groups">
            <field name="name">Usuario NCF</field>
            <field name="category_id" ref="base.module_category_accounting_accounting"/>
            <field name="implied_ids" eval="[(4, ref('account.group_account_invoice'))]"/>
            <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
            <field name="comment">Puede ver y usar NCF en facturas</field>
        </record>
        
        <!-- Grupo: Administrador NCF - Hereda de Usuario NCF -->
        <record id="group_ncf_manager" model="res.groups">
            <field name="name">Administrador NCF</field>
            <field name="category_id" ref="base.module_category_accounting_accounting"/>
            <field name="implied_ids" eval="[(4, ref('group_ncf_user')), (4, ref('account.group_account_manager'))]"/>
            <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
            <field name="comment">Puede configurar tipos y secuencias NCF</field>
        </record>
        
        <!-- Asignar grupo NCF User a todos los usuarios de Facturación -->
        <record id="account.group_account_invoice" model="res.groups">
            <field name="implied_ids" eval="[(4, ref('group_ncf_user'))]"/>
        </record>
        
        <!-- Asignar grupo NCF Manager a todos los Administradores de Contabilidad -->
        <record id="account.group_account_manager" model="res.groups">
            <field name="implied_ids" eval="[(4, ref('group_ncf_manager'))]"/>
        </record>
        
    </data>
</odoo>
