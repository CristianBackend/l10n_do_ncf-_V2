<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="l10n_do_ncf.Dashboard">
        <div class="o_action ncf-dashboard">
            <div class="container-fluid py-3">

                <!-- Header -->
                <div class="row mb-4">
                    <div class="col-12">
                        <h3 class="mb-1 fw-bold">Dashboard NCF</h3>
                        <p class="text-muted mb-0">Panel de Control de Comprobantes Fiscales</p>
                    </div>
                </div>

                <!-- Alertas -->
                <t t-if="state.alerts.length > 0">
                    <div class="row mb-4">
                        <div class="col-12">
                            <t t-foreach="state.alerts" t-as="alert" t-key="alert_index">
                                <div t-attf-class="alert alert-#{alert.type}" role="status">
                                    <strong t-esc="alert.title"/>: <span t-esc="alert.message"/>
                                </div>
                            </t>
                        </div>
                    </div>
                </t>

                <!-- Estadisticas principales -->
                <div class="row mb-4 g-3">
                    <!-- Facturas del Mes -->
                    <div class="col-lg-3 col-md-6">
                        <div class="card ncf-card h-100">
                            <div class="card-body ncf-stat-card">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <p class="ncf-stat-label text-muted mb-1">Facturas del Mes</p>
                                        <h2 class="ncf-stat-value mb-0" t-esc="state.invoices_month"/>
                                    </div>
                                    <div class="ncf-icon-circle ncf-icon-primary">
                                        <span>üìÑ</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Compras del Mes -->
                    <div class="col-lg-3 col-md-6">
                        <div class="card ncf-card h-100">
                            <div class="card-body ncf-stat-card">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <p class="ncf-stat-label text-muted mb-1">Compras del Mes</p>
                                        <h2 class="ncf-stat-value mb-0" t-esc="state.purchases_month"/>
                                    </div>
                                    <div class="ncf-icon-circle ncf-icon-success">
                                        <span>üõí</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Anulados -->
                    <div class="col-lg-3 col-md-6">
                        <div class="card ncf-card h-100">
                            <div class="card-body ncf-stat-card">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <p class="ncf-stat-label text-muted mb-1">Anulados</p>
                                        <h2 class="ncf-stat-value mb-0" t-esc="state.cancelled_month"/>
                                    </div>
                                    <div class="ncf-icon-circle ncf-icon-warning">
                                        <span>üö´</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Licencia -->
                    <div class="col-lg-3 col-md-6">
                        <div class="card ncf-card h-100">
                            <div class="card-body ncf-stat-card">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <p class="ncf-stat-label text-muted mb-1">Licencia</p>
                                        <t t-if="state.license.is_valid">
                                            <h5 class="mb-0 fw-bold text-success">Activa</h5>
                                            <small class="text-muted">
                                                <t t-esc="state.license.days_remaining"/> d√≠as restantes
                                            </small>
                                        </t>
                                        <t t-else="">
                                            <h5 class="mb-0 fw-bold text-danger">Inactiva</h5>
                                        </t>
                                    </div>
                                    <t t-if="state.license.is_valid">
                                        <div class="ncf-icon-circle ncf-icon-success">
                                            <span>‚úÖ</span>
                                        </div>
                                    </t>
                                    <t t-else="">
                                        <div class="ncf-icon-circle ncf-icon-danger">
                                            <span>‚ùå</span>
                                        </div>
                                    </t>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Secuencias NCF -->
                <div class="row mb-4">
                    <div class="col-12">
                        <div class="card ncf-card">
                            <div class="card-header py-3 border-bottom">
                                <div class="d-flex justify-content-between align-items-center">
                                    <h5 class="mb-0 fw-bold">Secuencias NCF Activas</h5>
                                    <button class="btn btn-sm btn-outline-primary" t-on-click="openSequences">
                                        Ver todas
                                    </button>
                                </div>
                            </div>
                            <div class="card-body p-0">
                                <t t-if="state.sequences.length > 0">
                                    <div class="table-responsive">
                                        <table class="table ncf-table mb-0">
                                            <thead>
                                                <tr>
                                                    <th class="ps-4">Tipo</th>
                                                    <th>Serie</th>
                                                    <th>Disponibles</th>
                                                    <th style="width: 200px;">Uso</th>
                                                    <th class="pe-4">Vencimiento</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <t t-foreach="state.sequences" t-as="seq" t-key="seq.id">
                                                    <tr>
                                                        <td class="ps-4 fw-bold" t-esc="seq.name"/>
                                                        <td>
                                                            <span class="badge bg-secondary" t-esc="seq.prefix"/>
                                                        </td>
                                                        <td>
                                                            <span t-att-class="'badge ' + (seq.percentage > 50 ? 'bg-success' : (seq.percentage > 20 ? 'bg-warning' : 'bg-danger'))">
                                                                <t t-esc="seq.available"/> / <t t-esc="seq.total"/>
                                                            </span>
                                                        </td>
                                                        <td>
                                                            <div class="d-flex align-items-center">
                                                                <div class="progress flex-grow-1" style="height: 8px;">
                                                                    <div t-att-class="'progress-bar ' + (seq.percentage > 50 ? 'bg-success' : (seq.percentage > 20 ? 'bg-warning' : 'bg-danger'))"
                                                                         t-attf-style="width: #{seq.percentage}%"/>
                                                                </div>
                                                                <span class="ms-2 small text-muted"><t t-esc="seq.percentage"/>%</span>
                                                            </div>
                                                        </td>
                                                        <td class="pe-4 text-muted" t-esc="seq.expiration"/>
                                                    </tr>
                                                </t>
                                            </tbody>
                                        </table>
                                    </div>
                                </t>
                                <t t-else="">
                                    <div class="text-center py-5 text-muted">
                                        <p class="mb-2">No hay secuencias NCF activas</p>
                                        <button class="btn btn-primary btn-sm" t-on-click="openSequences">
                                            Crear Secuencia
                                        </button>
                                    </div>
                                </t>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Accesos rapidos -->
                <div class="row mb-4">
                    <div class="col-12">
                        <div class="card ncf-card">
                            <div class="card-header py-3 border-bottom">
                                <h5 class="mb-0 fw-bold">Accesos R√°pidos</h5>
                            </div>
                            <div class="card-body">
                                <div class="row g-3">
                                    <div class="col-lg-2 col-md-4 col-6">
                                        <button class="btn btn-outline-primary w-100 ncf-quick-btn" t-on-click="openInvoices">
                                            <span class="ncf-btn-icon">üìÑ</span>
                                            <span class="small">Facturas</span>
                                        </button>
                                    </div>
                                    <div class="col-lg-2 col-md-4 col-6">
                                        <button class="btn btn-outline-success w-100 ncf-quick-btn" t-on-click="openPurchases">
                                            <span class="ncf-btn-icon">üõí</span>
                                            <span class="small">Compras</span>
                                        </button>
                                    </div>
                                    <div class="col-lg-2 col-md-4 col-6">
                                        <button class="btn btn-outline-info w-100 ncf-quick-btn" t-on-click="openSequences">
                                            <span class="ncf-btn-icon">üìã</span>
                                            <span class="small">Secuencias</span>
                                        </button>
                                    </div>
                                    <div class="col-lg-2 col-md-4 col-6">
                                        <button class="btn btn-outline-warning w-100 ncf-quick-btn" t-on-click="openReports">
                                            <span class="ncf-btn-icon">üìä</span>
                                            <span class="small">Reportes DGII</span>
                                        </button>
                                    </div>
                                    <div class="col-lg-2 col-md-4 col-6">
                                        <button class="btn btn-outline-secondary w-100 ncf-quick-btn" t-on-click="openLicense">
                                            <span class="ncf-btn-icon">üîë</span>
                                            <span class="small">Licencia</span>
                                        </button>
                                    </div>
                                    <div class="col-lg-2 col-md-4 col-6">
                                        <button class="btn btn-outline-dark w-100 ncf-quick-btn" t-on-click="openTypes">
                                            <span class="ncf-btn-icon">‚öôÔ∏è</span>
                                            <span class="small">Tipos NCF</span>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </t>

</templates>
