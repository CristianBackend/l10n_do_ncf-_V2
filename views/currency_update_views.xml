<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- ============================================= -->
    <!-- HISTORIAL DE TASAS -->
    <!-- ============================================= -->
    
    <record id="view_currency_rate_provider_tree" model="ir.ui.view">
        <field name="name">l10n_do_ncf.currency.rate.provider.tree</field>
        <field name="model">l10n_do_ncf.currency.rate.provider</field>
        <field name="arch" type="xml">
            <tree string="Historial de Tasas">
                <field name="date"/>
                <field name="currency_id"/>
                <field name="rate"/>
                <field name="source"/>
                <field name="applied" widget="boolean"/>
            </tree>
        </field>
    </record>
    
    <record id="view_currency_rate_provider_form" model="ir.ui.view">
        <field name="name">l10n_do_ncf.currency.rate.provider.form</field>
        <field name="model">l10n_do_ncf.currency.rate.provider</field>
        <field name="arch" type="xml">
            <form string="Tasa de Cambio">
                <header>
                    <button name="action_apply_rate" type="object" 
                            string="Aplicar a Odoo" class="btn-primary"
                            invisible="applied"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="date"/>
                            <field name="currency_id"/>
                            <field name="rate"/>
                        </group>
                        <group>
                            <field name="source"/>
                            <field name="applied"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    
    <record id="action_currency_rate_history" model="ir.actions.act_window">
        <field name="name">Historial de Tasas</field>
        <field name="res_model">l10n_do_ncf.currency.rate.provider</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_group_currency': 1}</field>
    </record>
    
    <!-- ============================================= -->
    <!-- CONFIGURACION AUTO UPDATE -->
    <!-- ============================================= -->
    
    <record id="view_currency_auto_update_form" model="ir.ui.view">
        <field name="name">l10n_do_ncf.currency.auto.update.form</field>
        <field name="model">l10n_do_ncf.currency.auto.update</field>
        <field name="arch" type="xml">
            <form string="Actualizaci贸n Autom谩tica de Tasas">
                <header>
                    <button name="action_update_rates_now" type="object"
                            string=" Actualizar Ahora" class="btn-primary"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    
                    <group>
                        <group string=" Monedas a Actualizar">
                            <field name="update_usd"/>
                            <field name="update_eur"/>
                        </group>
                        <group string=" Alertas">
                            <field name="alert_on_failure"/>
                            <field name="alert_user_ids" widget="many2many_tags"
                                   invisible="not alert_on_failure"/>
                        </group>
                    </group>
                    
                    <group string=" Estado">
                        <field name="last_update" readonly="1"/>
                        <field name="last_status" readonly="1"/>
                    </group>
                    
                    <group string="癸 Informaci贸n">
                        <field name="company_id" groups="base.group_multi_company"/>
                        <field name="active"/>
                    </group>
                    
                    <div class="alert alert-info" role="alert">
                        <strong> Informaci贸n:</strong>
                        <ul>
                            <li>Las tasas se actualizan autom谩ticamente cada d铆a a las 6:00 AM</li>
                            <li>Se utilizan m煤ltiples fuentes con respaldo autom谩tico</li>
                            <li>Si todas las fuentes fallan, se env铆a alerta por email</li>
                            <li>Para tasas oficiales DGII: <a href="https://dgii.gov.do/estadisticas/tasaCambio" target="_blank">Ver tasas DGII</a></li>
                        </ul>
                    </div>
                </sheet>
            </form>
        </field>
    </record>
    
    <record id="view_currency_auto_update_tree" model="ir.ui.view">
        <field name="name">l10n_do_ncf.currency.auto.update.tree</field>
        <field name="model">l10n_do_ncf.currency.auto.update</field>
        <field name="arch" type="xml">
            <tree string="Configuraci贸n de Tasas">
                <field name="company_id" groups="base.group_multi_company"/>
                <field name="update_usd"/>
                <field name="update_eur"/>
                <field name="last_update"/>
                <field name="active"/>
            </tree>
        </field>
    </record>
    
    <record id="action_currency_auto_update" model="ir.actions.act_window">
        <field name="name">Actualizaci贸n Autom谩tica</field>
        <field name="res_model">l10n_do_ncf.currency.auto.update</field>
        <field name="view_mode">tree,form</field>
    </record>
    
    <!-- ============================================= -->
    <!-- WIZARD MANUAL -->
    <!-- ============================================= -->
    
    <record id="view_currency_manual_wizard_form" model="ir.ui.view">
        <field name="name">l10n_do_ncf.currency.manual.wizard.form</field>
        <field name="model">l10n_do_ncf.currency.manual.wizard</field>
        <field name="arch" type="xml">
            <form string="Ingresar Tasas Manualmente">
                <group>
                    <field name="date"/>
                </group>
                <group>
                    <group>
                        <field name="usd_rate" placeholder="Ej: 60.5000"/>
                    </group>
                    <group>
                        <field name="eur_rate" placeholder="Ej: 65.2000"/>
                    </group>
                </group>
                <div class="alert alert-warning" role="alert">
                    <strong> Consulte las tasas oficiales:</strong><br/>
                    <a href="https://dgii.gov.do/estadisticas/tasaCambio" target="_blank">
                        DGII - Tasas de Cambio Oficiales
                    </a>
                </div>
                <footer>
                    <button name="action_save" string="Guardar" type="object" class="btn-primary"/>
                    <button string="Cancelar" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    
    <record id="action_currency_manual_wizard" model="ir.actions.act_window">
        <field name="name">Ingresar Tasas Manual</field>
        <field name="res_model">l10n_do_ncf.currency.manual.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
    
    <!-- ============================================= -->
    <!-- MENUS -->
    <!-- ============================================= -->
    
    <menuitem id="menu_currency_rates_root"
              name="Tasas de Cambio"
              parent="l10n_do_ncf.menu_ncf_root"
              sequence="45"
              groups="l10n_do_ncf.group_ncf_manager"/>
    
    <menuitem id="menu_currency_auto_update"
              name="Configuraci贸n Autom谩tica"
              parent="menu_currency_rates_root"
              action="action_currency_auto_update"
              sequence="10"/>
    
    <menuitem id="menu_currency_manual"
              name="Ingresar Manual"
              parent="menu_currency_rates_root"
              action="action_currency_manual_wizard"
              sequence="20"/>
    
    <menuitem id="menu_currency_history"
              name="Historial de Tasas"
              parent="menu_currency_rates_root"
              action="action_currency_rate_history"
              sequence="30"/>
    
    <!-- ============================================= -->
    <!-- CRON JOB -->
    <!-- ============================================= -->
    
    <record id="ir_cron_currency_update" model="ir.cron">
        <field name="name">NCF: Actualizar Tasas de Cambio</field>
        <field name="model_id" ref="model_l10n_do_ncf_currency_auto_update"/>
        <field name="state">code</field>
        <field name="code">model._cron_update_rates()</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="numbercall">-1</field>
        <field name="active">True</field>
        <field name="doall">False</field>
    </record>
    
</odoo>
