<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Vista Tree -->
    <record id="view_ncf_type_tree" model="ir.ui.view">
        <field name="name">l10n_do_ncf.type.tree</field>
        <field name="model">l10n_do_ncf.type</field>
        <field name="arch" type="xml">
            <tree string="Tipos de NCF">
                <field name="prefix"/>
                <field name="name"/>
                <field name="code"/>
                <field name="is_electronic" widget="boolean"/>
                <field name="aplica_vencimiento" widget="boolean"/>
                <field name="for_sale" widget="boolean"/>
                <field name="for_purchase" widget="boolean"/>
                <field name="requires_rnc" widget="boolean"/>
                <field name="active" widget="boolean"/>
            </tree>
        </field>
    </record>
    
    <!-- Vista Form -->
    <record id="view_ncf_type_form" model="ir.ui.view">
        <field name="name">l10n_do_ncf.type.form</field>
        <field name="model">l10n_do_ncf.type</field>
        <field name="arch" type="xml">
            <form string="Tipo de NCF">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
                            <field name="active" widget="boolean_button" options='{"terminology": "archive"}'/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="prefix" placeholder="B01"/>
                        </h1>
                    </div>
                    <group>
                        <group string="Información General">
                            <field name="name"/>
                            <field name="code"/>
                            <field name="is_electronic"/>
                        </group>
                        <group string="Configuración">
                            <field name="requires_rnc"/>
                            <field name="for_sale"/>
                            <field name="for_purchase"/>
                        </group>
                    </group>
                    <group>
                        <group string="Configuración de Vencimiento">
                            <field name="aplica_vencimiento"/>
                            <field name="vigencia_anos" invisible="not aplica_vencimiento"/>
                        </group>
                    </group>
                    <group string="Descripción">
                        <field name="description" nolabel="1" placeholder="Descripción del uso de este tipo de NCF según normativa DGII..."/>
                    </group>
                    <notebook>
                        <page string="Secuencias" name="sequences">
                            <field name="sequence_ids">
                                <tree string="Secuencias">
                                    <field name="name"/>
                                    <field name="range_from"/>
                                    <field name="range_to"/>
                                    <field name="current_number"/>
                                    <field name="available_qty"/>
                                    <field name="expiration_date"/>
                                    <field name="state" widget="badge" decoration-success="state == 'active'" decoration-warning="state == 'draft'" decoration-danger="state in ('depleted', 'expired')"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    
    <!-- Acción -->
    <record id="action_ncf_type" model="ir.actions.act_window">
        <field name="name">Tipos de NCF</field>
        <field name="res_model">l10n_do_ncf.type</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Tipos de Comprobantes Fiscales
            </p>
            <p>
                Los tipos de NCF vienen precargados según la normativa DGII.
                Aquí puede ver y administrar los tipos disponibles.
            </p>
        </field>
    </record>
    
</odoo>
