<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">

        <!-- ============================================= -->
        <!-- RETENCIONES ISR -->
        <!-- ============================================= -->

        <record id="retention_isr_prof" model="l10n_do_ncf.retention.type">
            <field name="name">ISR Servicios Profesionales (10%)</field>
            <field name="code">ISR_PROF</field>
            <field name="retention_type">isr</field>
            <field name="rate">10</field>
            <field name="apply_on">base</field>
            <field name="partner_type">all</field>
            <field name="sequence">10</field>
            <field name="description">Norma 02-05: Retención 10% ISR por servicios profesionales (abogados, contadores, consultores, etc.)</field>
        </record>

        <record id="retention_isr_tec" model="l10n_do_ncf.retention.type">
            <field name="name">ISR Servicios Técnicos (2%)</field>
            <field name="code">ISR_TEC</field>
            <field name="retention_type">isr</field>
            <field name="rate">2</field>
            <field name="apply_on">base</field>
            <field name="partner_type">all</field>
            <field name="sequence">20</field>
            <field name="description">Retención 2% ISR por servicios técnicos (plomeros, electricistas, albañiles, etc.)</field>
        </record>

        <record id="retention_isr_alq" model="l10n_do_ncf.retention.type">
            <field name="name">ISR Alquiler Persona Física (10%)</field>
            <field name="code">ISR_ALQ</field>
            <field name="retention_type">isr</field>
            <field name="rate">10</field>
            <field name="apply_on">base</field>
            <field name="partner_type">person</field>
            <field name="sequence">30</field>
            <field name="description">Retención 10% ISR por alquiler de bienes muebles o inmuebles pagados a personas físicas.</field>
        </record>

        <record id="retention_isr_int" model="l10n_do_ncf.retention.type">
            <field name="name">ISR Intereses (10%)</field>
            <field name="code">ISR_INT</field>
            <field name="retention_type">isr</field>
            <field name="rate">10</field>
            <field name="apply_on">base</field>
            <field name="partner_type">all</field>
            <field name="sequence">40</field>
            <field name="description">Retención 10% ISR sobre intereses pagados.</field>
        </record>

        <record id="retention_isr_estado" model="l10n_do_ncf.retention.type">
            <field name="name">ISR Pagos del Estado (5%)</field>
            <field name="code">ISR_EST</field>
            <field name="retention_type">isr</field>
            <field name="rate">5</field>
            <field name="apply_on">base</field>
            <field name="partner_type">all</field>
            <field name="sequence">50</field>
            <field name="description">Retención 5% ISR en pagos realizados por el Estado.</field>
        </record>

        <!-- ============================================= -->
        <!-- RETENCIONES ITBIS -->
        <!-- ============================================= -->

        <record id="retention_itbis_prof" model="l10n_do_ncf.retention.type">
            <field name="name">ITBIS Servicios Profesionales (30%)</field>
            <field name="code">ITBIS_PROF</field>
            <field name="retention_type">itbis</field>
            <field name="rate">30</field>
            <field name="apply_on">itbis</field>
            <field name="partner_type">all</field>
            <field name="sequence">100</field>
            <field name="description">Norma 02-05: Retención 30% del ITBIS por servicios profesionales.</field>
        </record>

        <record id="retention_itbis_pf" model="l10n_do_ncf.retention.type">
            <field name="name">ITBIS Persona Física (100%)</field>
            <field name="code">ITBIS_PF</field>
            <field name="retention_type">itbis</field>
            <field name="rate">100</field>
            <field name="apply_on">itbis</field>
            <field name="partner_type">person</field>
            <field name="sequence">110</field>
            <field name="description">Retención 100% del ITBIS cuando se paga a personas físicas.</field>
        </record>

        <record id="retention_itbis_seg" model="l10n_do_ncf.retention.type">
            <field name="name">ITBIS Servicios de Seguridad (100%)</field>
            <field name="code">ITBIS_SEG</field>
            <field name="retention_type">itbis</field>
            <field name="rate">100</field>
            <field name="apply_on">itbis</field>
            <field name="partner_type">all</field>
            <field name="sequence">120</field>
            <field name="description">Norma 07-09: Retención 100% del ITBIS por servicios de vigilancia.</field>
        </record>

    </data>
</odoo>
